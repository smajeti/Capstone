<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_lib_recyler_item_layout"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_margin="1dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/song_img_view_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/video_cover_image"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/background_light">

        <TextView
            android:id="@+id/song_name_txt_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="2dp"
            android:text="Dummy Song Name"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/song_view_percent_txt_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:text="27%"
            android:textColor="@android:color/black" />
    </RelativeLayout>

</FrameLayout>